<?xml version="1.0" encoding="UTF-8"?>
<publication>
  <!-- Runestone Services Configuration -->
  <source webwork-problems="../generated-assets/webwork/webwork-representations.xml">
    <directories external="../assets" generated="../generated-assets"/>
  </source>

  <!-- HTML-Specific Options -->
  <html>
    <css>
      <file source="custom-styles.css"/>
    </css>
    <platform host="runestone"/>
    <baseurl href="https://runestone.academy"/>
    
    <!-- Runestone Services Settings -->
    <index-page ref="to-the-student"/>
    
    <!-- Calculator option -->
    <calculator model="geogebra-classic"/>
    
    <!-- Enable SageCell for executable code -->
    <sage>
      <server>https://sagecell.sagemath.org</server>
    </sage>
    
    <!-- Solutions visibility -->
    <exercise-inline hint="yes" answer="yes" solution="yes"/>
    <exercise-divisional hint="yes" answer="yes" solution="yes"/>
  </html>

  <!-- Runestone-specific settings -->
  <runestone>
    <!-- Your book's unique ID on Runestone (must be lowercase, no spaces) -->
    <!-- You'll set this when you create the book on Runestone Academy -->
    <book-id>iscam</book-id>
    <!-- Make book publicly visible in course creation -->
    <public>no</public>
  </runestone>
</publication>
